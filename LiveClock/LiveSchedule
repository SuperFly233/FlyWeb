<body>
  <div class="container">
    <h1>— 时间表 —</h1>
    <div class="date" id="date"></div>

    <div id="schedule">
      <div class="item" data-start="20:00" data-end="21:00">20:00 - 21:00 <span>阅读 · 作文</span></div>
      <div class="item" data-start="21:00" data-end="22:00">21:00 - 22:00 <span>作文 · 翻译</span></div>
      <div class="item" data-start="22:00" data-end="22:30">22:00 - 22:30 <span>总结复盘</span></div>
    </div>
  </div>

  <script>
    // 自动填入今日日期
    const dateObj = new Date();
    const options = { year: 'numeric', month: 'numeric', day: 'numeric', weekday: 'short' };
    document.getElementById('date').textContent = dateObj.toLocaleDateString('zh-CN', options);

    // 自动高亮当前时间段
    function highlightCurrent() {
      const now = new Date();
      const currentMinutes = now.getHours() * 60 + now.getMinutes();
      const items = document.querySelectorAll('.item');
      items.forEach(item => {
        const [h1, m1] = item.dataset.start.split(':').map(Number);
        const [h2, m2] = item.dataset.end.split(':').map(Number);
        const start = h1 * 60 + m1;
        const end = h2 * 60 + m2;
        if (currentMinutes >= start && currentMinutes < end) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
    }

    highlightCurrent();
    setInterval(highlightCurrent, 60000); // 每分钟刷新一次
  </script>
</body>
</html>
